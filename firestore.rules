rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isAdmin() {
      return request.auth.token.email == "ethancho12@gmail.com";
    }
    match /ideas/{id} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    match /votes/{id} {
      allow read: if true;
      allow create: if isSignedIn();
    }
    match /comments/{id} {
      allow read: if true;
      allow create: if isSignedIn();
    }
  }
}
